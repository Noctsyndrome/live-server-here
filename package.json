{
  "name": "live-server-here",
  "version": "0.1.1",
  "description": "Launch Live Server from Windows Context Menu",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-ui": "vite build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "live-server",
    "electron",
    "context-menu"
  ],
  "author": "Dennki",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0",
    "live-server": "^1.2.2",
    "portfinder": "^1.0.38"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "clsx": "^2.1.1",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "i18next": "^25.7.3",
    "lucide-react": "^0.562.0",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.0",
    "react-router-dom": "^7.11.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.0"
  },
  "build": {
    "appId": "com.liveserverhere.app",
    "productName": "Live Server Here",
    "files": [
      "dist-ui/**/*",
      "build/icon.png",
      "main.js",
      "preload.js",
      "server-manager.js",
      "server-runner.js",
      "tray-manager.js",
      "package.json"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "include": "installer.nsh"
    }
  }
}